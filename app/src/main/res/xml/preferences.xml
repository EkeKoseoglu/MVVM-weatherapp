<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="@string/preference_location_category_title">
        <SwitchPreference
                android:key="@string/pref_use_device_location_key"
                android:title="@string/pref_switch_title"
                android:summary="@string/pref_switch_summary"
                android:defaultValue="true"
                android:disableDependentsState="true"/>

        <tr.com.homesoft.weatherapp.ui.view.settings.SummarizedEditTextPreference
                android:capitalize="words"
                android:key="@string/pref_custom_location_key"
                android:defaultValue="@string/pref_loc_default_value"
                android:summary="%s"
                android:title="@string/pref_location_title"
                android:dependency="USE_DEVICE_LOCATION"/>
    </PreferenceCategory>

    <PreferenceCategory
            android:title="@string/preference_unit_category_title">
        <ListPreference
                android:key="@string/pref_unit_system_key"
                android:title="@string/pref_unit_system_title"
                android:summary="%s"
                android:defaultValue="@string/pref_units_metric_value"
                android:entries="@array/unitSystemEntries"
                android:entryValues="@array/unitSystemValues"/>
    </PreferenceCategory>
</PreferenceScreen>