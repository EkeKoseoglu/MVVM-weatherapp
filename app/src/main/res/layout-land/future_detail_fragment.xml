<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="isMetric" type="Boolean"/>
        <variable name="isLoading" type="Boolean"/>
        <variable name="vm" type="tr.com.homesoft.wetherapp.ui.view.future.detail.FutureDetailViewModel"/>
        <variable name="obj"
                  type="tr.com.homesoft.wetherapp.data.local.unitlocalized.weekly.UnitSpecificWeeklyForecastEntry"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.view.future.detail.FutureDetailFragment">

        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline4"
                app:layout_constraintGuide_percent="0.5"/>
        <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{!safeUnbox(isLoading)}"
                app:constraint_referenced_ids="textView2,textView5,textView6,imageView3,textView7,textView8,textView9,textView10,textView13,textView11,textView14,textView12"/>

        <TextView
                android:text="@{obj.conditionText}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                tools:text="Patchy rain possible"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"/>

        <TextView
                app:formatTemp="@{obj.temperature}"
                app:metric="@{safeUnbox(isMetric)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                tools:text="25.0\u00b0C"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" android:layout_marginTop="32dp"/>

        <TextView
                app:minTemp="@{obj.minTemperature}"
                app:maxTemp="@{obj.maxTemperature}"
                app:metric="@{safeUnbox(isMetric)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                tools:text="Min: 19\u00b0C Max: 20\u00b0C"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"/>

        <ImageView
                android:src="@{obj.conditionIconUrl}"
                tools:srcCompat="@drawable/art_clouds"
                android:layout_height="0dp"
                android:id="@+id/imageView3"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="1:1"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.25"
                tools:ignore="ContentDescription"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        />

        <!-- Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:text="@string/wind_label"
                tools:text="Wind :"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>

        <!-- Precipitation Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                tools:text="Precipitation :"
                android:text="@string/precip_label"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>

        <!-- Visibility Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:text="@string/visiblity_label"
                tools:text="Visibility :"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline4"/>

        <!-- Humidity Label -->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                android:text="@string/humidity_label"
                tools:text="Humidity :"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline4"/>

        <TextView
                app:formatWind="@{obj.windSpeed}"
                app:metric="@{safeUnbox(isMetric)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                tools:text="15 m/s"/>

        <TextView
                app:formatPrecipitaion="@{obj.totalPrecip}"
                app:metric="@{safeUnbox(isMetric)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/textView8"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                tools:text="10 mm"/>

        <TextView
                app:formatVisibilityDistance="@{obj.visibility}"
                app:metric="@{safeUnbox(isMetric)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/textView9"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                tools:text="10 km"/>

        <TextView
                android:text="@{@string/format_humidity(obj.humidity)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/textView10"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                tools:text="% 10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>